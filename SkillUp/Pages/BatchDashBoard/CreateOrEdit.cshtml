 @page "/BatchDashBoard/CreateOrEdit/{id?}"
  @model SkillUp.Pages.BatchDashBoard.CreateOrEditModel
@{
    Layout = null;
    bool isEditMode = Model.IsEditMode;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(isEditMode ? "Edit Batch" : "Create Batch")</title>
    <link rel="stylesheet" href="~/css/BatchCreateEdit.css" />
</head>
<body>
    <div class="container">
        <h1>@(isEditMode ? "Edit Batch" : "Create Batch")</h1>
        <form method="post">
            @if (isEditMode)
            {
                <input type="hidden" asp-for="BatchCreateOrEdit.Id" />
            }
            <div class="form-group">
                <label asp-for="BatchCreateOrEdit.Name"> Name</label>
                <input asp-for="@Model.BatchCreateOrEdit.Name" class="form-control" />
                <span asp-validation-for="BatchCreateOrEdit.Name" class="text-danger"></span>
            </div>

            @if (isEditMode)
            {
                <h2>List Of Users</h2>
                <div style="overflow-x: auto; overflow-y: auto; max-height: 400px; border: 1px solid #dee2e6; padding: 10px;">
                    <table class="table">

                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>JoinDate</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        @if (Model.BatchViewModel != null && Model.BatchViewModel.UserCreateOrEdits.Any())
                        {
                            <tbody>
                                @foreach (var user in Model.BatchViewModel.UserCreateOrEdits)
                                {
                                    <tr>
                                        <td>@user.FirstName</td>
                                        <td>@user.LastName</td>
                                        <td>@user.Email</td>
                                        <td>@user.JoinDate</td>
                                        <td>@user.Role</td>
                                        <td>
                                            <a class="btn btn-warning" id="removeUser" asp-page="CreateOrEdit" asp-route-id="@user.Id">Remove User</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" style="text-align: center; padding: 20px;">No data available</td>
                            </tr>
                        }
                    </table>
                </div>
                <div>
                    <a calss="btn btn-primary" id="AddUser">Add User</a>
                </div>
            }
            <div class="form-group">
                <button type="submit" class="btn btn-primary">@(isEditMode ? "Update" : "Save")</button>
            </div>
        </form>
    </div>
</body>
</html>
